{
    "manifest_version": 2,
    "name": "Flowmodoro",
    "version": "1.0",
    "permissions": ["notifications", "alarms"],
    "description": "A flexible twist on the Pomodoro technique, adapting to your unique work rhythm for optimal productivity in every session.",
    "icons": {
        "128": "images/icon-pause.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "128": "images/icon-pause.png"
        },
        "default_title": "Flowmodoro - Pomodoro Technique Alternative",
        "default_popup": "popup.html"
    }
}
